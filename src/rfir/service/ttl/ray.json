                        "headerspace": 4500,    //起始位低电平时长; 默认0
                        "onemark": 600,         //数据位1高电平时长; 默认0
                        "onespace": 1600,       //数据位1低电平时长; 默认0
                        "zeromark": 600,        //数据位0高电平时长; 默认0
                        "zerospace": 550,       //数据位0低电平时长; 默认0
