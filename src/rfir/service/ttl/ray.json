            "send":[
                {
                    "params": {
                        "pin": 0,              //gpio针脚, 默认0
                        "inverted": false,      //电平是否取反
                        "modulation": true,     //制式(脉冲)模式
                        "repeat": 0,            //重发次数
                        "MSBfirst": true,       //大端(高位在前)模式
                        "frequency": 38,        //载波频率, 38K
                        "dutycycle": 50,        //占空比，50%

                        "nbits": 0,             //数据bit位长度; 默认0                    
